<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
            
            <VideoView
                android:id="@+id/mVideoView"
 				android:layout_width="370dp"
                android:layout_height="200dp" 
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/nextCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/mVideoView"
                android:layout_centerHorizontal="true"
                android:text="@string/Nextcount"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ProgressBar
                android:id="@+id/mProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mVideoView"
                android:layout_centerInParent="true"
                android:layout_marginTop="60dp" />

            <TextView
                android:id="@+id/mProgressMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mProgressBar"
                android:layout_centerHorizontal="true"
                android:text="ProgressMessage" />

            <Button
                android:id="@+id/viewMoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mVideoView"
                android:layout_alignTop="@+id/mVideoView"
                android:onClick="viewMore"
                android:text="View More" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mVideoView"
                android:layout_toRightOf="@+id/mVideoView"
                android:onClick="next"
                android:text="@string/Next" />

</RelativeLayout>